{
  "name": "chocoapp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm ci --prefix chocolate-candy && npm run build --prefix chocolate-candy",
    "start": "npx serve -s chocolate-candy/www -l $PORT",
    "backend": "npm run start --prefix backend",
    "frontend": "npm run start --prefix chocolate-candy",
    "dev": "concurrently --handle-input -n BE,FE -c blue,green \"npm:backend\" \"npm:frontend\""
  },
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@ionic/angular": "^7.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0",
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.2.0",
    "@angular/compiler": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@ionic/cli": "^7.0.0",
    "typescript": "~5.4.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "20.x"
  }
}
